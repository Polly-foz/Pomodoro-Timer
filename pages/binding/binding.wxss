/* pages/binding/binding.wxss */
.container{
  height: 100vh;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
  background: white;
  /* border: 10px solid red; */
  padding: 0 40rpx;
}

/* title */
.titleWrapper{
  /* border: 1px solid blue; */
  width: 100%;
}
.titleWrapper .title{
  /* border: 1px solid red; */
  position: relative;
  width: fit-content;
}
.titleWrapper .title text{
  position: relative;
  font-size: 32rpx;
}
.titleWrapper .title::before{
  background-color: #FFDCCF;
  content: '';
  width: 100%;
  height: 16rpx;
  position: absolute;
  bottom: 0;
  left:0;
}

/* inputs */
.inputs{
  /* width: 100%; */
  margin-top: 77rpx;
  width: 640rpx;
  /* border: 1px solid blue; */
}
.inputs .input{
  /* width: 100%; */
  border: 1px solid var(--main-bg-color);
  height: 80rpx;
  border-radius: 16rpx;
  padding-left: 35rpx;
  font-size: 24rpx;
  color: var(--main-bg-color);
}

.input-placeholder{
  color: var(--main-bg-color);
}

.inputs .input:last-child{
  margin-top: 56rpx;
}

/* button */
.button{
  margin-top: 84rpx;
}

/* binding */
.binding{
  margin-top:48rpx;
  font-size: 20rpx;
  color:var(--main-bg-color);
}

/* image */
.image{
  /* border: 1px solid grey; */
  width: 768rpx;
  height: 384rpx;
  position: absolute;
  bottom: 0;
  opacity: 0.5;
}