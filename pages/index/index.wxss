.todoItem{
  margin: 24rpx 30rpx;
  box-shadow: 0 0 1rpx 1rpx rgba(0,0,0,0.1);
  display: flex;
  align-items: center;
  padding: 17rpx 33rpx;
  background-color: white;
  position:relative;
  z-index: 10;
}

.select{
  border: 1px solid var(--main-bg-color);
  width: 20rpx;
  height: 20rpx;
  display: inline-block;
  border-radius: 28rpx;
  position: relative;
}
.select.active view{
  width: 15rpx;
  height: 15rpx;
  background-color: var(--main-bg-color);
  border-radius: 15rpx;
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
}
